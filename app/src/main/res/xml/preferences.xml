<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="pref_key_general_settings" >
        <ListPreference
            android:key="pref_data_plan_type"
            android:title="Data Plan Type"
            android:summary="Choose the type of your Data Plan"
            android:entries="@array/data_plan_type_entries"
            android:entryValues="@array/data_plan_type_values"
            android:defaultValue="-1" />
        <ListPreference
            android:key="pref_data_plan_promotion"
            android:title="Data Plan Promotion"
            android:summary="Choose if you are using internet via a promotion plan"
            android:entries="@array/data_plan_promotion_entries"
            android:entryValues="@array/data_plan_promotion_values"
            android:defaultValue="-1" />
        <ListPreference
            android:key="pref_data_cap"
            android:title="@string/title_activity_data_cap"
            android:summary="@string/title_activity_data_cap_desc"
            android:entries="@array/data_cap_entries"
            android:entryValues="@array/data_cap_values"
            android:defaultValue="-1" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_header_measurement"
        android:key="pref_key_measurement_settings" >
        <CheckBoxPreference
            android:key="pref_auto_measurement"
            android:title="Enable Periodic Tests"
            android:summary="Periodically run throughput tests in the background"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_header_personal"
        android:key="pref_key_personal_settings" >
        <EditTextPreference
            android:key="pref_email"
            android:title="Email Address"
            android:summary="Change your email address"
            android:defaultValue="" />
    </PreferenceCategory>
</PreferenceScreen>